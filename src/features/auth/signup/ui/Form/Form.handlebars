<form id="{{id}}">
    <section class="form__input-group">
        <label class="modal__text" for="login">Логин *</label>
        <input type="text" class="input" name="login" placeholder="Appuniq123" required>
        <span class="form__text_error" id="loginMessage"></span>
    </section>
    <section class="form__input-group">
        <label class="modal__text" for="firstName">Имя *</label>
        <input type="text" class="input" name="name" placeholder="Иванов Иван" required>
        <span class="form__text_error" id="nameMessage"></span>
    </section>
    <section class="form__input-group">
        <label class="modal__text" for="phoneNumber">Телефон *</label>
        <input type="text" data-tel-input="" class="input" name="phoneNumber" placeholder="8 (999) 999-99-99" maxlength="18" required>
        <span class="form__text_error" id="phoneNumberMessage"></span>
    </section>
    <section class="form__input-group">
        <label class="modal__text" for="email">Почта *</label>
        <input type="email" class="input" name="email" placeholder="example@mail.ru" required>
        <span class="form__text_error" id="emailMessage"></span>
    </section>
    <section class="form__input-group">
        <label class="modal__text" for="password">Пароль *</label>
        <input type="password" class="input" name="password" placeholder="••••••" required>
        <span class="form__text_error" id="passwordMessage"></span>
    </section>
    <section class="form__input-group">
        <label class="modal__text" for="passwordCheck">Повторите пароль *</label>
        <input type="password" class="input" name="passwordCheck" placeholder="••••••" required>
        <span class="form__text_error" id="passwordCheckMessage"></span>
    </section>
    <section class="form__input-group">
        <label class="modal__text" for="avatar">Аватар *</label>
        <div class="input_type_file" onclick="{{id}}.avatar.click();">Переместите сюда изображения</div>
        <input type="file" name="avatar" style="display: none;" accept="image/jpeg,image/png,image/gif">
        <span class="form__text_error" id="avatarMessage"></span>
    </section>
    <section class="form__input-group">
        <label class="grid-left modal__text" for="accept">
            <input type="checkbox" name="accept">
            Я принимаю
        </label>
        <a href="#"><button class="cell-btn-sm">пользовательское соглашение</button></a>
    </section>
</form>

